<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.hp.mqm</groupId>
	<artifactId>mqm-rest-client-test</artifactId>
	<name>MQM REST Client - Integration Tests</name>
	<parent>
		<groupId>com.hp.mqm</groupId>
		<artifactId>mqm-client</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<properties>
		<DEPLOY_TARGET>localhost</DEPLOY_TARGET>
		<JETTY_PORT>8081</JETTY_PORT>
		<serverUrl>http://${DEPLOY_TARGET}:${JETTY_PORT}/qcbin</serverUrl>
		<saUser>sa</saUser>
		<projectUserName>restuser</projectUserName>
		<domain>UNITEST</domain>
		<project>resttest</project>
		<overwrite>true</overwrite>
		<include.tests>**/*Test.java</include.tests>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.hp.mqm</groupId>
			<artifactId>mqm-rest-client</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin.version}</version>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>${surefire.version}</version>
					<configuration>
						<argLine>${surefireArgLine}</argLine>
						<skipTests>true</skipTests>
						<testFailureIgnore>true</testFailureIgnore>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<profiles>
		<profile>
			<!-- Creates a project-->
			<id>create-project</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>com.hp.maven.plugins.alm</groupId>
						<artifactId>rest-create-project</artifactId>
						<version>1.0.8.1</version>
						<executions>
							<execution>
								<id>clean-create</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>create-project</goal>
								</goals>
								<configuration>
									<serverUrl>${serverUrl}</serverUrl>
									<saUser>${saUser}</saUser>
									<projectUserName>${projectUserName}</projectUserName>
									<projectUserPassword>${projectUserPassword}</projectUserPassword>
									<domain>${domain}</domain>
									<project>${project}</project>
									<overwrite>${overwrite}</overwrite>
									<extensions>${extensions}</extensions>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<profile>
			<!--runs the integration tests -->
			<id>itest</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>${failsafe.version}</version>
						<executions>
							<execution>
								<id>creation-of-schema</id>
								<phase>integration-test</phase>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
								<configuration>
									<includes>
										<include>${include.tests}</include>
									</includes>
									<skipTests>false</skipTests>
									<argLine>${failsafe.argline}</argLine>
									<systemPropertyVariables>
										<mqm.location>${serverUrl}</mqm.location>
										<mqm.domain>${domain}</mqm.domain>
										<mqm.project>${project}</mqm.project>
										<mqm.user>${projectUserName}</mqm.user>
										<mqm.password>${projectUserPassword}</mqm.password>
									</systemPropertyVariables>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
